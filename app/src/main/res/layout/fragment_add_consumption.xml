<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/add_consumption_fragment_height"
    tools:context=".view.fragments.AddConsumptionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/top_headline_consumption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_consumption"
            android:theme="@style/HeadLine1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/enter_category_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_between_elements"
            app:boxStrokeColor="@color/secondary_color"
            app:endIconMode="clear_text"
            app:layout_constraintTop_toBottomOf="@+id/top_headline_consumption">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/enter_category"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_edit_text"
                android:hint="@string/add_category"
                android:inputType="text"
                android:theme="@style/Field_credit" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/enter_price_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_between_elements"
            app:boxStrokeColor="@color/secondary_color"
            app:endIconMode="clear_text"
            app:layout_constraintTop_toBottomOf="@+id/enter_category_container">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/enter_price"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_edit_text"
                android:hint="@string/add_price"
                android:inputType="numberDecimal"
                android:theme="@style/Field_credit" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/enter_description_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_between_elements"
            app:boxStrokeColor="@color/secondary_color"
            app:endIconMode="clear_text"
            app:layout_constraintTop_toBottomOf="@+id/enter_price_container">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/enter_description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_edit_text"
                android:hint="@string/add_description"
                android:inputType="text"
                android:theme="@style/Field_credit"
                tools:ignore="DuplicateClickableBoundsCheck,DuplicateClickableBoundsCheck,DuplicateClickableBoundsCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/categories_spinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spinner_height"
            app:layout_constraintBottom_toBottomOf="@+id/enter_category_container" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/enter_description_container">

            <Button
                android:id="@+id/add_consumption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:text="@string/add_consumption_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>